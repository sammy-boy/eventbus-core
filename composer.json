{
  "name": "sammy-boy/eventbus-core",
  "description": "Reusable event bus infrastructure for Laravel microservices",
  "keywords": [
    "laravel",
    "microservices",
    "event-bus",
    "rabbitmq",
    "event-driven",
    "sammy-boy"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Sammy Orondo",
      "email": "sammyorondo2@gmail.com",
      "homepage": "https://github.com/sammy-boy",
      "role": "Lead Developer & Package Maintainer"
    }
  ],
  "homepage": "https://github.com/sammy-boy/eventbus-core",
  "support": {
    "issues": "https://github.com/sammy-boy/eventbus-core/issues",
    "source": "https://github.com/sammy-boy/eventbus-core"
  },
  "autoload": {
    "psr-4": {
      "SammyBoy\\EventBus\\": "src/"
    }
  },
  "require": {
    "php": "^8.4",
    "illuminate/support": "^11.0|^12.0",
    "illuminate/contracts": "^11.0|^12.0",
    "php-amqplib/php-amqplib": "^3.0"
  },
  "extra": {
    "laravel": {
      "providers": [
        "SammyBoy\\EventBus\\EventBusServiceProvider"
      ]
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}